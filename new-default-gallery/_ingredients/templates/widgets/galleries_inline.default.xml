<widget type="template">
	<title>Default Gallery</title>
	<args>
		<!-- LW: the lw_gallery classes and data-gallery attributes are required -->
		<arg id="thumb_width">420</arg>
		<arg id="thumb_height">420</arg>
		<arg id="image_width">1000</arg>
		<arg id="clean_markup">true</arg>
		<arg id="format_widget">
			<div class="lw_gallery" data-gallery-id="{id}" data-gallery-width="{image_width}">
				<a class="lw_gallery_preview" href="#0" role="button" title="Open gallery" aria-label="Open gallery: {title_clean}">
					<field content="true">
						<if var="title"/>
						<content>
							<!-- LW: show the gallery title if this is an inline gallery -->
							<h3>{title}</h3>
						</content>
						<else content="true">
							<content>
								<!-- LW: otherwise add an a11y title for details page galleries  -->
								<h3 class="lw_sr_only">View gallery</h3>
							</content>
						</else>
					</field>
				</a>
				<div class="lw_gallery_thumbs">
					{widget}
				</div>
			</div>
		</arg>
		<arg id="format">
			<div class="lw_gallery_thumb" aria-hidden="true"><field var="image" cast="encoded"/></div>
		</arg>
		<arg id="include_javascript">/_ingredients/templates/resources/default-gallery/default-gallery.js</arg>
		<arg id="include_stylesheet">/_ingredients/templates/resources/default-gallery/default-gallery.css</arg>
	</args>
</widget>